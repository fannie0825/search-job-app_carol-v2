# ============================================
# CareerLens API Configuration
# Copy this file to .env and fill in your keys
# ============================================

# Backend API URL
REACT_APP_API_URL=http://localhost:8000/api

# Use Mock API? (set to false to use real APIs)
REACT_APP_USE_MOCK_API=false

# ============================================
# API Keys - Fill these in from Streamlit secrets.toml
# ============================================

# Azure OpenAI API Key
# From Streamlit: AZURE_OPENAI_API_KEY
# Remove quotes, add REACT_APP_ prefix
REACT_APP_AZURE_OPENAI_API_KEY=

# Azure OpenAI Endpoint
# From Streamlit: AZURE_OPENAI_ENDPOINT
# Remove quotes, add REACT_APP_ prefix
REACT_APP_AZURE_OPENAI_ENDPOINT=

# RapidAPI Key
# From Streamlit: RAPIDAPI_KEY
# Remove quotes, add REACT_APP_ prefix
REACT_APP_RAPIDAPI_KEY=

# Backend API Key (if your backend requires it)
REACT_APP_BACKEND_API_KEY=

# ============================================
# Instructions:
# ============================================
# 1. Copy this file and rename to .env
# 2. Fill in the values above (no quotes needed)
# 3. Save the file
# 4. Restart your React app
